              class="mb-h-10 mb-w-10 mb-rounded-2xl mb-border mb-border-black/10 mb-bg-white/70 hover:mb-bg-white mb-transition mb-flex mb-items-center mb-justify-center"
              href="{{ section.settings.social_facebook }}"
              target="_blank"
              rel="nofollow noopener"
              aria-label="Facebook"
              title="Facebook"
            >

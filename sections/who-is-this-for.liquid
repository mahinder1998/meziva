{% comment %}
  sections/who-is-this-for.liquid
{% endcomment %}

<section
  id="{{ section.id }}-who-for"
  class="sw-w-full sw-relative"
  style="background-color: {{section.settings.section_bg}}; color:{{section.settings.section_text_color}}"
>
  <div class="sw-max-w-[912px] sw-mx-auto sw-px-4 xl:sw-px-0 sw-relative sw-z-10">

    {% if section.settings.heading != blank %}
      <h2 class="sw-text-center sw-font-heading sw-font-semibold sw-text-xl xl:sw-text-[28px] sw-mb-4 xl:sw-mb-8">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <div class="sw-font-body  sw-text-xs xl:sw-text-[24px] sw-leading-normal sw-text-[#ffffff] sw-mx-auto sw-mb-3 xl:sw-mb-8">
        {{ section.settings.subheading }}
      </div>
    {% endif %}

    <div
      class="sw-relative sw-rounded-2xl sw-border sw-border-[#01C5E3] sw-bg-[#1E1E1E]
             sw-pt-[19px] sw-px-[18px] sw-pb-[21px]
             xl:sw-pt-[24px] xl:sw-px-[38px] xl:sw-pb-[40px] sw-mx-auto"
    >
      {%- comment -%} ICON ROW {%- endcomment -%}
      <div class="sw-grid sw-grid-cols-4 sw-gap-4 xl:sw-gap-10 sw-items-center sw-justify-items-center">
        {% for block in section.blocks %}
          <div
            class="sw-flex sw-flex-col sw-items-center sw-gap-1"
            {{ block.shopify_attributes }}
          >
            {% if block.settings.icon != blank %}
              <div class="sw-w-10 sw-h-10 xl:sw-w-20 xl:sw-h-20 sw-flex sw-items-center sw-justify-center">
                <img
                  src="{{ block.settings.icon | image_url: width: 64 }}"
                  alt="{{ block.settings.title | escape }}"
                  class="sw-w-full sw-h-full sw-object-contain"
                  loading="lazy"
                >
              </div>
            {% else %}
              <div
                class="sw-w-10 sw-h-10 xl:sw-w-12 xl:sw-h-12 sw-rounded-full  sw-flex sw-items-center sw-justify-center"
              >
                <span class="sw-text-lg"> üåç</span>
              </div>
            {% endif %}

            {% if block.settings.title != blank %}
              <span class="sw-text-[10px] xl:sw-text-[16px] sw-font-semibold"> 
                {{ block.settings.title }}
              </span>
            {% endif %}
          </div>
        {% endfor %}
      </div>

      {%- comment -%} TRADERS LABEL WITH ARROWS {%- endcomment -%}
      {% if section.settings.traders_label != blank %}
        <div class="sw-flex sw-items-center sw-justify-center sw-gap-2 xl:sw-gap-4 sw-mt-6
         sw-absolute
  sw-bg-[#1e1e1e]
  sw-left-1/2
  sw-bottom-[-8px]
  xl:sw-bottom-[-18px]
  sw--translate-x-1/2
        ">
<span class="sw-w-0 sw-h-0
             sw-border-t-[4px] sw-border-t-transparent 
             sw-border-b-[4px] sw-border-b-transparent 
             sw-border-l-[6px] sw-border-l-[#01C5E3]"></span>
          <span class=" sw-font-heading sw-text-[11px] xl:sw-text-[24px] sw-font-semibold  sw-uppercase">
            {{ section.settings.traders_label }}
          </span>
         <span class="sw-w-0 sw-h-0 
               sw-border-t-[4px] sw-border-t-transparent 
               sw-border-b-[4px] sw-border-b-transparent 
               sw-border-r-[6px] sw-border-r-[#01C5E3]"></span>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  #{{ section.id }}-who-for {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }

  @media (min-width: 1024px) {
    #{{ section.id }}-who-for {
      padding-top: {{ section.settings.desktop_padding_top }}px;
      padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Who is this for",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Who is this for?"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.</p>"
    },
    {
      "type": "text",
      "id": "traders_label",
      "label": "Bottom label",
      "default": "TRADERS"
    },
    {
      "type": "color",
      "label": "section background color",
      "id": "section_bg",
      "default": "#1E1E1E"
    },
    {
      "type": "color",
      "label": "section text color",
      "id": "section_text_color",
      "default": "#ffffff" 
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "label": "Mobile padding top (px)",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "label": "Mobile padding bottom (px)",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "desktop_padding_top",
      "label": "Desktop padding top (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "desktop_padding_bottom",
      "label": "Desktop padding bottom (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 80
    } 
  ],
  "blocks": [
    {
      "type": "trader",
      "name": "Trader type",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon (40x40px suggested)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Label",
          "default": "Retail"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Who is this for",
      "blocks": [
        { "type": "trader", "settings": { "title": "Retail" } },
        { "type": "trader", "settings": { "title": "Algorithmic" } },
        { "type": "trader", "settings": { "title": "Intra-Day" } },
        { "type": "trader", "settings": { "title": "Swing" } }
      ]
    }
  ]
}
{% endschema %}
 
      <div class="mb-flex mb-items-center mb-gap-3">
        {% if section.settings.logo != blank %}
          <img
            src="{{ section.settings.logo | image_url: width: 220 }}"
            alt="{{ shop.name | escape }}"
            class="mb-h-10 mb-w-auto"
            loading="lazy"

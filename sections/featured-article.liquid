<style>
    .logo-wrapper img{
        max-width: 100%;
    }
#{{ section.id }}-featured-article .featured-collection-wrapper{
  padding-top: {{section.settings.mobile_padding}}px;
  padding-bottom: {{section.settings.mobile_padding}}px;
}

.slider-dots button.is-active {
  width: 36px;
  background: #01C5E3 !important;
  height: 8px;
}



@media(min-width:1200px){
  

  #{{ section.id }}-featured-article .featured-collection-wrapper{
    padding-top: {{section.settings.desktop_padding}}px;
    padding-bottom: {{section.settings.desktop_padding}}px;
  }
}
</style>

{% if section.settings.enable_slider %}
  {% render 'vite-tag' with 'featured-article-slider.js' %}
{% endif %}

<section
  class="sw-px-4 sw-relative {% if section.settings.show_card_padding %} sw-pr-0{% endif %}"
  id="{{ section.id }}-featured-article"
  data-id="featured-collection-v2"
  style="background-color: {{section.settings.section_bg}}; color:{{section.settings.section_text_color}}"
  data-autoplay="{{ section.settings.autoplay | default: true }}"
>
  <div class="xl:sw-w-[1152px] sw-mx-auto">
    <div class="featured-collection-wrapper sw-relative sw-z-10">

      <div class="{% if section.settings.show_card_padding %} sw-pr-4 {% endif %}">
        <div class="sw-flex sw-justify-center sw-items-center sw-gap-4">
          {% if section.settings.section_title != blank %}
          {% render 'section-heading' %}
        {% endif %}

        {%- if section.settings.logo != blank -%}
          <div class="sw-flex sw-justify-center sw-mb-6 xl:sw-mb-8">
            <div
              class="logo-wrapper sw-flex sw-items-center sw-justify-center"
            >
              <img
                src="{{ section.settings.logo | img_url: '400x' }}"
                alt="{{ section.settings.logo_alt | escape }}"
                loading="lazy"
              >
            </div>
          </div>
        {%- endif -%}
        </div>

        {%- if section.settings.description != blank -%}
          <div
            class="sw-max-w-[640px] sw-mx-auto sw-text-[14px] sw-leading-[22px] xl:sw-text-[16px] xl:sw-leading-[26px] sw-text-[#F5F5F5]
            sw-mb-6 xl:sw-mb-8"
          >
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>

     <featured-article
  class="featured-slider-root sw-relative"
  data-autoplay="{{ section.settings.autoplay }}"
  data-slide-interval="{{ section.settings.slide_interval }}"
  data-show-arrows="{{ section.settings.show_arrows }}"
  data-show-dots="{{ section.settings.show_dots }}"
  data-show-play-pause="{{ section.settings.show_play_pause }}"
  data-enable-mobile-multi="{{ section.settings.enable_mobile_multi }}"
  data-mobile-slides-per-view="{{ section.settings.mobile_slides_per_view }}"
  data-desktop-per-view="{{ section.settings.desktop_per_view }}"  
>
        <div
          data-role="slider-wrapper"
          class="keen-slider sw-w-full sw-overflow-hidden sw-relative sw-rounded-2xl xl:sw-rounded-[32px]"
        >

          {%- comment -%}
            ARTICLE SLIDES
            - Mode 1: article_source == 'blocks' → use manual blocks
            - Mode 2: article_source == 'blog'   → use selected blog's latest articles
          {%- endcomment -%}

          {%- if section.settings.article_source == 'blocks' -%}
            {%- comment -%} MODE 1: manually selected blocks {%- endcomment -%}
            {%- for block in section.blocks -%}
              {%- if block.type == 'article' and block.settings.article != blank -%}
                {%- assign article = articles[block.settings.article] -%}
                {%- if article -%}
                  <div
                    class="fc-item sw-flex sw-flex-col sw-items-center sw-rounded-2xl keen-slider__slide
                      {% if section.settings.show_card_padding %}
                        xl:sw-rounded-[32px] sw-border sw-border-solid sw-border-[#A6A6A6] sw-px-2 sw-py-4 xl:sw-px-6 xl:sw-py-6
                      {% endif %}"
                    {% if section.settings.show_card_padding %}
                      style="background: {{ section.settings.card_bg_color }};"
                    {% endif %}
                    {{ block.shopify_attributes }}
                  >
                    {%- comment -%} TITLE → max ~2 lines {%- endcomment -%}
                    {% if section.settings.show_card_heading and article.title != blank %}
                      {% assign fa_title = article.title | strip_html | truncatewords: 10, '…' %}
                      <h3 class="sw-text-center sw-font-heading sw-font-semibold sw-text-[14px] xl:sw-text-[24px] sw-mb-6 sw-mt-4 xl:sw-mt-0">
                        {{ fa_title }}
                      </h3>
                    {% endif %}

                    {% if article.image %}
                      <a href="{{ article.url }}" class="sw-block sw-rounded-2xl sw-overflow-hidden">
                        <img
                          src="{{ article.image | img_url: 'master' }}"
                          alt="{{ article.image.alt | escape }}"
                          loading="lazy"
                        >
                      </a>
                    {% endif %}

                    {%- comment -%} BODY → max ~4 lines {%- endcomment -%}
                    {% if section.settings.show_card_paragraph and article.content %}
                      {% assign fa_body = article.content | strip_html | truncatewords: 30, '…' %}
                      <p class="sw-text-xs xl:sw-text-[18px] sw-leading-relaxed sw-mt-4 sw-max-w-[480px] xl:sw-mt-6">
                        {{ fa_body }}
                      </p>
                    {% endif %}
                  </div>
                {%- endif -%}
              {%- endif -%}
            {%- endfor -%}

          {%- else -%}
            {%- comment -%} MODE 2: auto – latest articles from a blog {%- endcomment -%}
            {%- if section.settings.source_blog != blank -%}
              {%- for article in section.settings.source_blog.articles limit: section.settings.articles_limit -%}
                <div
                  class="fc-item sw-flex sw-flex-col sw-items-center sw-rounded-2xl keen-slider__slide
                    {% if section.settings.show_card_padding %}
                      xl:sw-rounded-[32px] sw-border sw-border-solid sw-border-[#A6A6A6] sw-px-2 sw-py-4 xl:sw-px-6 xl:sw-py-6
                    {% endif %}"
                  {% if section.settings.show_card_padding %}
                    style="background: {{ section.settings.card_bg }};"
                  {% endif %}
                >
                  {%- comment -%} TITLE → max ~2 lines {%- endcomment -%}
                  {% if section.settings.show_card_heading and article.title != blank %}
                    {% assign fa_title = article.title | strip_html | truncatewords: 10, '…' %}
                    <h3 class="sw-text-center sw-font-heading sw-font-semibold sw-text-[14px] xl:sw-text-[24px] sw-mb-6 sw-mt-4 xl:sw-mt-0">
                      {{ fa_title }}
                    </h3>
                  {% endif %}

                  {% if article.image %}
                    <a href="{{ article.url }}" class="sw-block sw-rounded-2xl sw-overflow-hidden">
                      <img
                        src="{{ article.image | img_url: 'master' }}"
                        alt="{{ article.image.alt | escape }}"
                        loading="lazy"
                      >
                    </a>
                  {% endif %}

                  {%- comment -%} BODY → max ~4 lines {%- endcomment -%}
                  {% if section.settings.show_card_paragraph and article.content %}
                    {% assign fa_body = article.content | strip_html | truncatewords: 30, '…' %}
                    <p class="sw-text-xs xl:sw-text-[18px] sw-leading-relaxed sw-mt-4 sw-max-w-[480px] xl:sw-mt-6">
                      {{ fa_body }}
                    </p>
                  {% endif %}
                </div>
              {%- endfor -%}
            {%- endif -%}
          {%- endif -%}

        </div>

        {% if section.settings.show_arrows %}
          <button
            class="slider-arrow prev-arrow fc-arrow fc-arrow-left
            sw-hidden
                sw-absolute
                sw-top-1/2
                sw--translate-y-1/2
                sw-z-30
                sw-bg-transparent
                sw-border-none
                sw-cursor-pointer
                xl:sw-flex
                sw-items-center
                sw-justify-center
                sw-w-[40px]
                sw-h-[40px]
                xl:sw-left-[-55px]
            "
            data-role="arrow-prev"
            aria-label="Previous slide"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40" fill="none">
              <path d="M13.6667 20L23.6667 30L26 27.6667L18.3333 20L26 12.3333L23.6667 10L13.6667 20Z" fill="white"/>
            </svg>
          </button>

          <button
            class="slider-arrow next-arrow fc-arrow fc-arrow-right
            
            sw-hidden
                sw-absolute
                sw-top-1/2
                sw--translate-y-1/2
                sw-z-30
                sw-bg-transparent
                sw-border-none
                sw-cursor-pointer
                xl:sw-flex
                sw-items-center
                sw-justify-center
                sw-w-[40px]
                sw-h-[40px]
                xl:sw-right-[-55px]
            "
            data-role="arrow-next"
            aria-label="Next slide"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40" fill="none">
              <path d="M26.3333 20L16.3333 30L14 27.6667L21.6667 20L14 12.3333L16.3333 10L26.3333 20Z" fill="white"/>
            </svg>
          </button>
        {% endif %}

        <div class="slider-controls sw-flex sw-items-center sw-justify-center sw-mt-4 sw-z-40 sw-gap-4 xl:sw-mt-8">
          <div class="slider-dots sw-flex sw-bg-[#303030] sw-rounded-[24px] sw-gap-4 sw-min-w-[152px] sw-h-10 sw-justify-center sw-items-center"></div>

          <button class="slider-play-pause sw-w-10 sw-h-10 sw-rounded-full sw-bg-[#303030] sw-flex sw-items-center sw-justify-center sw-text-black sw-font-bold">
            <svg xmlns="http://www.w3.org/2000/svg" width="12" height="14" viewBox="0 0 12 14" fill="none">
              <path d="M10 14C8.89543 14 8 13.1046 8 12V2C8 0.89543 8.89543 0 10 0C11.1046 0 12 0.895431 12 2V12C12 13.1046 11.1046 14 10 14ZM2 14C0.895431 14 0 13.1046 0 12V2C0 0.89543 0.895431 0 2 0C3.10457 0 4 0.895431 4 2V12C4 13.1046 3.10457 14 2 14Z" fill="#D9D9D9"/>
            </svg>
          </button>
        </div>

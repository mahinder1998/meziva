<style>
  @media (min-width: 1024px) {
    #meziva-single-hero-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_desktop }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px !important;
    }
  }
</style>

{% assign p = section.settings.product %}

<div id="{{ section.settings.section_id | escape }}">
  <section
    id="meziva-single-hero-{{ section.id }}"
    class="mb-relative mb-overflow-hidden mb-py-10 md:mb-py-16"
    style="background-color: {{ section.settings.section_bg }};
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    "
  >
    <div class="mb-relative mb-max-w-[1240px] mb-mx-auto mb-px-4 md:mb-px-8 xl:mb-px-0">
      {% if p == blank %}
        <div class="mb-rounded-2xl mb-bg-white mb-border mb-border-black/10 mb-p-6">
          <p class="mb-font-semibold mb-text-mb-heading">Select a product</p>
          <p class="mb-mt-1 mb-text-sm mb-text-black/60">Theme editor ‚Üí this section ‚Üí Product select</p>
        </div>
      {% else %}
        {% assign v = p.selected_or_first_available_variant %}
        {% assign available = v.available %}
        {% assign compare = v.compare_at_price | default: 0 %}
        {% assign price = v.price | default: 0 %}
        {% assign save_amount = 0 %}
        {% if compare > price %}
          {% assign save_amount = compare | minus: price %}
        {% endif %}

        {%- comment -%} Mini card image fallbacks from product gallery {%- endcomment -%}
        {% assign mini1 = section.settings.mini_card_1_image %}
        {% assign mini2 = section.settings.mini_card_2_image %}
        {% if mini1 == blank and p.images.size > 1 %}
          {% assign mini1 = p.images[1] %}
        {% endif %}
        {% if mini2 == blank and p.images.size > 2 %}
          {% assign mini2 = p.images[2] %}
        {% endif %}

        <meziva-single-product-hero
          class="mb-block"
          data-cart-add-url="{{ routes.cart_add_url }}.js"
          data-checkout-url="{{ routes.checkout_url }}"
          data-sticky-enabled="{{ section.settings.enable_sticky_atc }}"
          data-redirect="{{ section.settings.redirect_after_atc }}"
        >
          <div class="mb-grid mb-grid-cols-1 xl:mb-grid-cols-12 mb-gap-8 xl:mb-gap-12">
            <!-- LEFT COLUMN (Screenshot-2 layout) -->
            <div class="xl:mb-col-span-6">
              <div class="mb-rounded-[12px] mb-bg-white mb-border mb-border-black/5 mb-p-2">
                <!-- Main slider -->
                <div class="mb-rounded-[12px] mb-overflow-hidden">
                  {% if section.settings.enable_image_slider and p.images.size > 1 %}
                    <meziva-keen-slider
                      class="mb-relative mb-block"
                      data-autoplay="{{ section.settings.slider_autoplay }}"
                      data-interval="{{ section.settings.slider_interval }}"
                      data-show-arrows="{{ section.settings.slider_show_arrows }}"
                      data-show-dots="{{ section.settings.slider_show_dots }}"
                    >
                      <div
                        data-keen-container
                        class="keen-slider"
                        aria-label="Product images"
                      >
                        {% for img in p.images limit: section.settings.slider_image_limit %}
                          <div class="keen-slider__slide">
                            <div class="mb-relative mb-w-full mb-aspect-[4/3] md:mb-aspect-[5/4] mb-bg-white">
                              <img
                                src="{{ img | image_url: width: 900 }}"
                                srcset="{{ img | image_url: width: 600 }} 600w, {{ img | image_url: width: 900 }} 900w, {{ img | image_url: width: 1200 }} 1200w, {{ img | image_url: width: 1800 }} 1800w"
                                sizes="(min-width: 1280px) 560px, (min-width: 768px) 640px, 92vw"
                                alt="{{ img.alt | default: p.title | escape }}"
                                width="{{ img.width }}"
                                height="{{ img.height }}"
                                class="mb-absolute mb-inset-0 mb-h-full mb-w-full mb-object-cover lg:mb-object-contain mb-cursor-zoom-in"
                                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                                fetchpriority="{% if forloop.first %}high{% else %}auto{% endif %}"
                                decoding="async"
                                data-role="zoom-trigger"
                                data-zoom-src="{{ img | image_url: width: 2400 }}"
                                data-zoom-src-low="{{ img | image_url: width: 1200 }}"
                              >
                            </div>
                          </div>
                        {% endfor %}
                      </div>

                      {% if section.settings.slider_show_arrows %}
                        <button
                          type="button"
                          data-keen-prev
                          aria-label="Previous"
                          class="mb-hidden md:mb-grid mb-place-items-center mb-absolute mb-left-4 mb-top-1/2 mb--translate-y-1/2 mb-h-11 mb-w-11 mb-rounded-full mb-bg-white/90 mb-border mb-border-black/10 mb-shadow-sm"
                        >
                          ‚Äπ
                        </button>
                        <button
                          type="button"
                          data-keen-next
                          aria-label="Next"
                          class="mb-hidden md:mb-grid mb-place-items-center mb-absolute mb-right-4 mb-top-1/2 mb--translate-y-1/2 mb-h-11 mb-w-11 mb-rounded-full mb-bg-white/90 mb-border mb-border-black/10 mb-shadow-sm"
                        >
                          ‚Ä∫
                        </button>
                      {% endif %}

                      {% if section.settings.slider_show_dots %}
                        <div
                          data-keen-dots
                          class="mb-absolute mb-bottom-4 mb-left-1/2 mb--translate-x-1/2 mb-flex mb-gap-2"
                        ></div>
                      {% endif %}
                    </meziva-keen-slider>
                  {% else %}
                    {% assign img = p.featured_image %}
                    <div class="mb-relative mb-w-full mb-aspect-[4/3] md:mb-aspect-[5/4] mb-bg-white">
                      <img
                        src="{{ img | image_url: width: 900 }}"
                        srcset="{{ img | image_url: width: 600 }} 600w, {{ img | image_url: width: 900 }} 900w, {{ img | image_url: width: 1200 }} 1200w, {{ img | image_url: width: 1800 }} 1800w"
                        sizes="(min-width: 1280px) 560px, (min-width: 768px) 640px, 92vw"
                        alt="{{ img.alt | default: p.title | escape }}"
                        width="{{ img.width }}"
                        height="{{ img.height }}"
                        class="mb-absolute mb-inset-0 mb-h-full mb-w-full mb-object-cover lg:mb-object-contain mb-cursor-zoom-in"
                        loading="eager"
                        fetchpriority="high"
                        decoding="async"
                        data-role="zoom-trigger"
                        data-zoom-src="{{ img | image_url: width: 2400 }}"
                        data-zoom-src-low="{{ img | image_url: width: 1200 }}"
                      >
                    </div>
                  {% endif %}
                </div>
              </div>

              <!-- Bottom area -->
              <div
                class="
                  mb-grid mb-grid-cols-12 mb-gap-5 mb-h-max sm:mb-hidden mb-min-h-[120px]
                  xl:mb-flex
                "
              >
                <!-- Mini cards stack -->
                <div class="mb-col-span-6 mb-h-full xl:mb-col-span-6  xl:mb-w-1/2 ">
                  <div class="mb-relative">
                    <div
                      class="
                        mb-absolute mb-left-[-10px]  mb-top-[-40px] mb-min-w-[100px] mb-w-1/2 xl:mb-w-[50%] mb-min-h-[100px] mb-rounded-[12px] mb-p-1 mb-overflow-hidden mb-bg-white mb-border mb-border-black/5
                        xl:mb-min-h-[160px] xl:mb-top-[-80px] xl:mb-left-[-15px]
                      "
                    >
                      {% if mini1 != blank %}
                        <img
                          src="{{ mini1 | image_url: width: 400 }}"
                          alt="Mini image"
                          class="mb-h-full mb-w-full mb-object-cover"
                          loading="lazy"
                          decoding="async"
                        >
                      {% else %}
                        <div class="mb-h-full mb-w-full mb-bg-black/5"></div>
                      {% endif %}
                    </div>

                    <div
                      class="
                        mb-absolute mb-left-[40%] mb-top-[5px] mb-p-1 mb-w-1/2  mb-min-w-[100px] mb-min-h-[100px] xl:mb-w-[50%]  md:mb-w-[60%] mb-rounded-[12px] mb-overflow-hidden mb-bg-white mb-border mb-border-black/5 mb-shadow-sm
                        xl:mb-min-h-[140px] xl:mb-top-[5px]  xl:mb-left-[40%]
                      "
                    >
                      {% if mini2 != blank %}
                        <img
                          src="{{ mini2 | image_url: width: 400 }}"
                          alt="Mini image"
                          class="mb-h-full mb-w-full mb-object-cover"
                          loading="lazy"
                          decoding="async"
                        >
                      {% else %}
                        <div class="mb-h-full mb-w-full mb-bg-black/5"></div>
                      {% endif %}
                    </div>
                  </div>
                </div>
                <!-- Solve card -->
                <div
                  class="
                    mb-col-span-6 xl:mb-col-span-6 mb-ml-[-7%] mb-mt-[5px]
                    xl:mb-ml-0 xl:mb-w-1/2
                  "
                >
                  <div
                    class="
                      mb-space-y-2 mb-rounded-[12px] mb-bg-white/70 mb-border mb-border-black/5 mb-p-1 mb-py-[6px]
                      xl:mb-ml-[-15%]  xl:mb-p-5 xl:mb-space-y-3
                    "
                  >
                    <div class="mb-flex mb-items-center mb-gap-3 xl:mb-gap-4">
                      <span class="mb-h-5 mb-w-5 mb-rounded-xl mb-bg-mb-gray mb-border mb-border-mb-gray mb-flex mb-items-center mb-justify-center mb-place-items-center"
                        ><span class="mb-text-[12px]">üíß</span></span
                      >
                      <div class="mb-text-xs md:mb-text-base  mb-text-mb-heading">
                        {{ section.settings.solve_card_item_1 }}
                      </div>
                    </div>

                    <div class="mb-flex mb-items-center mb-gap-3 xl:mb-gap-4">
                      <span class="mb-h-5 mb-w-5 mb-rounded-xl mb-bg-mb-gray mb-border mb-border-mb-gray mb-flex mb-items-center mb-justify-center mb-place-items-center"
                        ><span class="mb-text-[12px]">üíã</span></span
                      >
                      <div class="mb-text-xs md:mb-text-base  mb-text-mb-heading">
                        {{ section.settings.solve_card_item_2 }}
                      </div>
                    </div>

                    <div class="mb-flex mb-items-center mb-gap-3 xl:mb-gap-4">
                      <span class="mb-h-5 mb-w-5 mb-rounded-xl mb-bg-mb-gray mb-border mb-border-mb-gray mb-flex mb-items-center mb-justify-center mb-place-items-center"
                        ><span class="mb-text-[12px]">üé®</span></span
                      >
                      <div class="mb-text-xs md:mb-text-base  mb-text-mb-heading">
                        {{ section.settings.solve_card_item_3 }}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- RIGHT COLUMN -->
            <div class="mb-mt-0 xl:mb-col-span-6">
              <div class="mb-rounded-[16px]">
                <h2 class="mb-text-3xl md:mb-text-5xl mb-font-semibold mb-text-mb-heading mb-leading-tight">
                  {{ section.settings.heading | default: p.title }}
                </h2>

                {% if section.settings.show_reviews %}
                  <div class="mb-mt-3 mb-flex mb-items-center mb-gap-2">
                    <div class="mb-flex mb-items-center">
                      {% for i in (1..5) %}
                        <span class="mb-leading-none">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 22.5 22.5">
                            <path d="m11.119 16.002 5.726 3.456-1.52-6.514 5.059-4.383-6.661-.565-2.604-6.143-2.6 6.143-6.666.566 5.059 4.383-1.519 6.514Z" fill="{{ section.settings.review_star_color }}"></path>
                          </svg>
                        </span>
                      {% endfor %}
                    </div>
                    <span class="mb-text-sm md:mb-text-base mb-text-mb-subheading">
                      <a href="#" class="mb-inline-block">
                        <span class="mb-font-semibold">{{ section.settings.rating_value }}</span>
                        <span class="mb-text-black/35">|</span>
                        {{ section.settings.rating_line }}
                      </a>
                    </span>
                  </div>
                {% endif %}

                {% if section.settings.subheading != blank %}
                  <p class="mb-mt-5 mb-text-sm md:mb-text-lg mb-leading-7 md:mb-leading-6 mb-text-mb-subheading">
                    {{ section.settings.subheading }}
                  </p>
                {% endif %}

                <ul class="mb-mt-2 mb-space-y-1 xl:mb-mt-3 xl:mb-space-y-2">
                  {% if section.settings.bullet_1 != blank %}
                    <li class="mb-flex mb-items-center mb-gap-2">
                      <span class="mb-mt-1" style="color: {{ section.settings.accent }};">
                        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24">
                          <path stroke="#4b1f00" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 11.917 9.724 16.5 19 7.5"/>
                        </svg>
                      </span>
                      <span class="mb-text-mb-body mb-text-sm md:mb-text-lg">{{ section.settings.bullet_1 }}</span>
                    </li>
                  {% endif %}
                  {% if section.settings.bullet_2 != blank %}
                    <li class="mb-flex mb-items-center mb-gap-2">
                      <span class="mb-mt-1" style="color: {{ section.settings.accent }};">
                        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24">
                          <path stroke="#4b1f00" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 11.917 9.724 16.5 19 7.5"/>
                        </svg>
                      </span>
                      <span class="mb-text-mb-body mb-text-sm md:mb-text-lg">{{ section.settings.bullet_2 }}</span>
                    </li>
                  {% endif %}
                  {% if section.settings.bullet_3 != blank %}
                    <li class="mb-flex mb-items-center mb-gap-2">
                      <span class="mb-mt-1" style="color: {{ section.settings.accent }};">
                        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24">
                          <path stroke="#4b1f00" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 11.917 9.724 16.5 19 7.5"/>
                        </svg>
                      </span>
                      <span class="mb-text-mb-body mb-text-sm md:mb-text-lg">{{ section.settings.bullet_3 }}</span>
                    </li>
                  {% endif %}
                </ul>

                {% if section.settings.readmore_link != blank %}
                  <a
                    href="{{ section.settings.readmore_link }}"
                    class="mb-inline-flex mb-items-center mb-gap-2 mb-mt-3 mb-text-sm mb-font-semibold"
                    style="color: {{ section.settings.readmore_color }};"
                  >
                    <span>Read more</span>
                    <svg class="mb-w-2 mb-h-2" viewBox="0 0 11 21" aria-hidden="true">
                      <polyline fill="none" stroke="{{ section.settings.readmore_color }}" points="0.5 0.5 10.5 10.5 0.5 20.5" stroke-width="4" />
                    </svg>
                  </a>
                {% endif %}

                <div class="mb-mt-7 mb-flex mb-flex-wrap mb-items-center mb-gap-x-2 mb-gap-y-3">
                  <span class="mb-text-3xl md:mb-text-4xl mb-font-semibold mb-text-mb-heading mb-font-heading mb-leading-none">
                    {{ v.price | money }}
                  </span>
                  {% if compare > price %}
                    <span class="mb-text-lg md:mb-text-xl mb-text-mb-muted mb-line-through mb-font-heading mb-leading-none">
                      {{ compare | money }}
                    </span>
                    <span
                      class="mb-inline-flex mb-items-center mb-rounded-full mb-px-5 mb-py-1 mb-text-sm md:mb-text-sm mb-font-semibold mb-leading-none"
                      style="background: {{ section.settings.save_pill_bg }}; color: {{ section.settings.save_pill_text }};"
                    >
                      {{ section.settings.save_pill_prefix }}
                      {{ save_amount | money }}
                      {{ section.settings.save_pill_suffix }}
                    </span>
                  {% endif %}
                  <span class="mb-text-sm md:mb-text-base mb-text-mb-subheading">
                    {{ section.settings.price_note }}
                  </span>
                </div>

                {% if section.settings.show_launch_pill %}
                  <div class="mb-mt-4">
                    <span
                      class="mb-inline-flex mb-items-center mb-gap-2 mb-rounded-full mb-px-5 mb-py-2 mb-text-sm md:mb-text-base mb-font-semibold"
                      style="background: {{ section.settings.launch_pill_bg }}; color: {{ section.settings.launch_pill_text }};"
                    >
                      <span>‚è∞</span>
                      {{ section.settings.launch_pill_text_line }}
                    </span>
                  </div>
                {% endif %}

                <form data-role="atc-form" class="mb-mt-7">
                  <input type="hidden" data-role="variant-id" value="{{ v.id }}">
                  <div class="mb-flex mb-items-center mb-gap-4">
                    <div class="mb-flex mb-items-center mb-justify-between mb-rounded-xl mb-border mb-border-mb-gray mb-bg-mb-gray  mb-w-[170px] mb-h-12 mb-px-4">
                      <button type="button" data-role="qty-minus" class="mb-text-xl mb-text-mb-heading" aria-label="Decrease quantity">‚Äì</button>
                      <input data-role="qty" value="1" inputmode="numeric" class="mb-w-10 mb-text-center mb-bg-transparent mb-outline-none mb-text-sm mb-font-semibold mb-text-mb-heading">
                      <button type="button" data-role="qty-plus" class="mb-text-xl mb-text-mb-heading" aria-label="Increase quantity">+</button>
                    </div>

                    <button
                      type="submit"
                      data-role="atc-btn"
                      data-label="{{ section.settings.cta_label }}"
                      class="mb-flex-1 mb-items-center mb-h-12 mb-rounded-xl mb-text-white mb-font-semibold mb-text-sm md:mb-text-base mb-shadow-sm mb-transition-colors mb-bg-mb-primary hover:mb-bg-mb-accent"
                      {% unless available %}disabled{% endunless %}
                    >
                      <span class="mb-inline-flex mb-items-center mb-justify-center mb-gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                          <path d="M0 0h24v24H0z" fill="none"/><path d="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.08-.14.12-.31.12-.48 0-.55-.45-1-1-1H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z"/>
                        </svg>
                        <span>{{ section.settings.cta_label }}</span>
                      </span>
                    </button>
                  </div>
                  <p data-role="status" class="mb-mt-3 mb-text-xs mb-text-red-600"></p>
                </form>

                <div class="mb-mt-5 mb-rounded-xl mb-bg-mb-gray mb-border mb-border-gray-50 mb-px-2 mb-py-2">
                  <div class="mb-flex mb-flex-wrap mb-items-center mb-gap-x-8 mb-gap-y-3">
                    {% for i in (1..3) %}
                      {% assign icon_key = 'trust_' | append: i | append: '_icon' %}
                      {% assign text_key = 'trust_' | append: i %}
                      {% if section.settings[text_key] != blank %}
                        <div class="mb-inline-flex mb-items-center mb-gap-2">
                          <span class="mb-grid mb-place-items-center mb-h-10 mb-w-10 mb-rounded-full">
                            {% if section.settings[icon_key] != blank %}
                              <img src="{{ section.settings[icon_key] | image_url: width: 40 }}" alt="" class="mb-h-8 mb-w-8 mb-object-contain mb-rounded-full" loading="lazy">
                            {% endif %}
                          </span>
                          <span class="mb-text-sm md:mb-text-base mb-text-mb-subheading">{{ section.settings[text_key] }}</span>
                        </div>
                      {% endif %}
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- MOBILE STICKY ATC -->
          <div
            data-role="sticky-atc"
            class="
              mb-fixed mb-left-0 mb-right-0 mb-bottom-0 mb-z-[999]
              mb-bg-white mb-border-t mb-border-black/10
              mb-shadow-[0_-12px_30px_rgba(0,0,0,0.10)]
              mb-px-4 mb-pt-3 mb-pb-[calc(12px+env(safe-area-inset-bottom))]
              mb-transition mb-duration-300 mb-ease-out
              mb-translate-y-[120%] mb-opacity-0 mb-pointer-events-none
            "
          >
            <div class="mb-text-lg mb-text-mb-heading mb-font-semibold mb-leading-none mb-mb-1">
              {{ section.settings.heading | default: p.title }}
            </div>
            <div class="mb-flex mb-items-center mb-gap-3">
              <div class="mb-flex-1 mb-min-w-0">
                <div data-role="sticky-price" class="mb-mt-1 mb-text-xl mb-font-heading mb-font-semibold mb-text-mb-heading mb-leading-tight">
                  {{ v.price | money }}
                </div>
              </div>

              <div class="mb-flex mb-items-center mb-justify-between mb-rounded-xl mb-bg-mb-gray mb-border mb-border-mb-gray mb-w-[132px] mb-h-11 mb-px-3">
                <button type="button" data-role="sticky-qty-minus" class="mb-text-xl mb-text-mb-heading">‚Äì</button>
                <input data-role="sticky-qty" value="1" inputmode="numeric" class="mb-w-10 mb-text-center mb-bg-transparent mb-outline-none mb-text-sm mb-font-semibold mb-text-mb-heading">
                <button type="button" data-role="sticky-qty-plus" class="mb-text-xl mb-text-mb-heading ">+</button>
              </div>

              <button
                type="button"
                data-role="sticky-atc-btn"
                data-label="{{ section.settings.cta_label }}"
                class="mb-h-11 mb-rounded-xl mb-px-5 mb-text-mb-surface mb-transition-colors mb-font-semibold mb-text-sm mb-shadow-sm mb-bg-mb-primary hover:mb-bg-mb-accent"
                {% unless available %}disabled{% endunless %}
              >
                {{ section.settings.cta_label }}
              </button>
            </div>
          </div>

          <!-- ‚úÖ ZOOM OVERLAY (same id/structure) -->
          <div
            id="mb-zoom-overlay-{{ section.id }}"
            class="
              mb-fixed mb-inset-0 mb-z-[99999] mb-flex mb-items-center mb-justify-center
              mb-bg-black/70 mb-backdrop-blur-[6px] mb-p-4
              mb-opacity-0 mb-pointer-events-none
              mb-transition mb-duration-200 mb-ease-out
            "
            aria-hidden="true"
          >
            <div
              data-lb-panel
              class="
                mb-relative mb-w-full mb-max-w-[1100px] mb-h-[78vh]
                mb-rounded-[18px] mb-overflow-hidden
                mb-border mb-border-white/20 mb-bg-white/5
                mb-scale-[0.98] mb-opacity-0
                mb-transition mb-duration-200 mb-ease-out
              "
            >
              <div class="mb-absolute mb-right-3 mb-top-3 mb-z-[3]">
                <button
                  type="button"
                  data-zoom-close
                  class="mb-grid mb-place-items-center mb-h-9 mb-w-9 mb-rounded-full mb-bg-[#FFF6FA] mb-border mb-border-black/5"
                  aria-label="Close"
                >
                  ‚úï
                </button>
              </div>

              <button
                type="button"
                data-lb-prev
                aria-label="Previous"
                class="mb-hidden md:mb-grid mb-place-items-center mb-absolute mb-left-3 mb-top-1/2 mb--translate-y-1/2 mb-z-[3] mb-h-11 mb-w-11 mb-rounded-full mb-bg-white/20"

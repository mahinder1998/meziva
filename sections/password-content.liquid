          <div class="mb-rounded-[2rem] mb-border mb-border-black/10 mb-bg-white/65 mb-backdrop-blur mb-shadow-[0_20px_70px_-35px_rgba(0,0,0,0.25)] mb-overflow-hidden">
            <div class="mb-relative mb-aspect-[16/10] sm:mb-aspect-[16/9] mb-bg-white">
              <img
                src="{{ section.settings.product_image | image_url: width: 1400 }}"
                alt="{{ section.settings.product_image_alt | escape }}"
                loading="lazy"
                class="mb-absolute mb-inset-0 mb-h-full mb-w-full mb-object-cover"
              >
              <div class="mb-absolute mb-inset-0 mb-bg-gradient-to-t mb-from-black/35 mb-via-black/0 mb-to-black/0"></div>

              {% if section.settings.product_image_badge != blank %}
                <div class="mb-absolute mb-left-4 mb-top-4 mb-inline-flex mb-items-center mb-gap-2 mb-rounded-full mb-bg-white/75 mb-backdrop-blur mb-border mb-border-black/10 mb-px-3 mb-py-1.5 mb-text-xs mb-font-semibold mb-text-[#724430]">
                  <span class="mb-inline-block mb-h-2 mb-w-2 mb-rounded-full mb-bg-[#FF60A6]"></span>
                  {{ section.settings.product_image_badge }}
                </div>
              {% endif %}

              {% if section.settings.product_image_caption != blank %}
                <div class="mb-absolute mb-left-4 mb-right-4 mb-bottom-4 mb-rounded-2xl mb-bg-white/70 mb-backdrop-blur mb-border mb-border-black/10 mb-p-4">
                  <div class="mb-text-sm mb-font-semibold mb-text-[#111111] mb-font-heading">
                    {{ section.settings.product_image_caption }}
                  </div>
                  {% if section.settings.product_image_caption_sub != blank %}
                    <div class="mb-mt-1 mb-text-xs mb-text-black/70 mb-font-body">
                      {{ section.settings.product_image_caption_sub }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        {% else %}
          <div class="mb-rounded-3xl mb-border mb-border-black/10 mb-bg-white/70 mb-backdrop-blur mb-p-5 sm:mb-p-6">
            <div class="mb-text-sm mb-text-black/70 mb-font-body">
              Add a product image in section settings → “Product image”.
            </div>
          </div>
        {% endif %}
      </div>

      <!-- RIGHT -->
      <div class="mb-w-full">
        <div class="mb-rounded-[2rem] mb-border mb-border-black/10 mb-bg-white/75 mb-backdrop-blur mb-shadow-[0_30px_120px_-50px_rgba(0,0,0,0.35)] mb-p-6 sm:mb-p-8">
          <!-- heading -->
          <div class="mb-text-center mb-mb-6">
            <div class="mb-inline-flex mb-items-center mb-justify-center mb-gap-2 mb-rounded-full mb-bg-[#FF60A6]/15 mb-text-[#724430] mb-border mb-border-black/10 mb-px-4 mb-py-2 mb-text-xs mb-font-semibold mb-font-body">
              {{ section.settings.form_kicker }}
            </div>
            <h2 class="mb-mt-3 mb-text-2xl sm:mb-text-3xl mb-font-semibold mb-font-heading">
              {{ section.settings.form_heading }}
            </h2>
            <p class="mb-mt-2 mb-text-sm mb-text-black/70 mb-font-body">
              {{ section.settings.form_subheading }}
            </p>
          </div>

          {% if section.settings.enable_countdown %}

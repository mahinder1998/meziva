{% liquid
  assign sales = settings.sale_layout
  assign bg_type = section.settings.background_type
  assign bg_image = section.settings.bg_image
  assign text_color = section.settings.text_color
  if sales
    assign block_type = 'sale-announcement'
  else
    assign block_type = 'announcement'
  endif
  assign blocks_to_render = 0
  for block in section.blocks
    if block.type == block_type
      assign blocks_to_render = blocks_to_render | plus: 1
    endif
  endfor
%}
{% if blocks_to_render > 0 %}
    <div style="background: linear-gradient(180deg, #233052 0%, #233052 100%);" class="sw-pt-4 sw-pb-2 sw-px-2 xl:sw-px-0">
    <div class="sw-max-w-[1152px] sw-mx-auto">
  <section id="announcement-bar={{ section.id }}"> 
    <announcement-bar
      class="sw-relative"
      data-section="{{ section.id }}"
      data-autoplay="{{ section.settings.autoplay }}"
      data-time="{{ section.settings.autoplay_time }}"
      data-blocks="{{ blocks_to_render }}"
    >
      <div
        style="{% if bg_type == 'image' %}background-image:url('{{ bg_image | image_url : 400 }}'){% else %}background:linear-gradient(0deg, #01C5E3 0%, #01E3BD 100%);{% endif %}"
        data-role="container"
        class="sw-flex sw-flex-nowrap sw-rounded-2xl  {% if blocks_to_render > 1 %}keen-slider{% endif %}"
      >
        {% for block in section.blocks %}
          {% if block.type == block_type %}
            {% liquid
              assign behavior = block.settings.behavior
              assign text = block.settings.announcement_text
              assign link = block.settings.announcement_link
              assign copy_text = block.settings.copy_text_content
              assign copy_icon = block.settings.copy_icon
            %}
            <div
              class="sw-flex-[0_0_100%] sw-max-w-[100%] sw-flex sw-justify-center sw-items-center sw-px-3 sw-py-2 sw-group sw-font-heading sw-text-xs sw-text-[#000] {% if blocks_to_render > 1 %}keen-slider__slide{% endif %}"
              data-beahavior="{{ behavior }}"
              data-role="announcement-strip"
              data-content="{{ copy_text }}"
              data-text="{{ text }}"
            >
              {% if behavior == 'redirect' %}
                <a
                  href="{{ link }}"
                  style="color:{{ text_color }};"
                  class="sw-no-underline sw-font-semibold sw-font-heading sw-text-xs sw-text-[#000]"
                >
                  {{- text -}}
                </a>
              {% else %}
                <div
                  data-role="copy"
                  style="color:{{ text_color }};"
                  class="sw-flex sw-items-center sw-gap-[4px] sw-cursor-pointer *:sw-mb-0"
                >
                  <span class="sw-opacity sw-no-underline sw-font-semibold sw-font-heading sw-text-xs sw-text-[#000]">
                    {{ text }}
                  </span>
                  {% if copy_icon %}
                    <span class="sw-relative sw-w-[20px] sw-h-[20px] sw-flex sw-justify-center sw-items-center">
                      {% render 'icons-v2',
                        icon: 'icon-copy',
                        class: 'sw-w-[14px] sw-h-[14px] sw-transition-all group-[&.copied]:sw-opacity-0'
                      %}
                      {% render 'icons-v2',
                        icon: 'icon-copy-check',
                        class: 'sw-w-[14px] sw-h-[14px] sw-absolute sw-opacity-0 group-[&.copied]:sw-opacity-100 sw-top-[50%] sw-left-[50%] sw-translate-x-[-50%] sw-translate-y-[-50%]'
                      %}
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
      {% if section.settings.arrows and blocks_to_render > 1 %}
        <button
          class="sw-absolute sw-top-[50%] sw-translate-y-[-50%] sw-left-[10px] sw-z-[1] sw-w-[20px] sw-h-[20px] sw-flex sw-justify-center sw-items-center"
          data-role="prev"
          style="color:{{ text_color }}"
        >
          {% render 'icons-v2', icon: 'icon-caret-left', class: 'sw-w-4 sw-h-4' %}
        </button>
        <button
          class="sw-absolute sw-top-[50%] sw-translate-y-[-50%] sw-right-[10px] sw-z-[1] sw-w-[20px] sw-h-[20px] sw-flex jsw-ustify-center sw-items-center"
          data-role="next"
          style="color:{{ text_color }}"
        >
          {% render 'icons-v2', icon: 'icon-caret-right', class: 'sw-w-4 sw-h-4' %}
        </button>
      {% endif %}
    </announcement-bar>
  </section>
  </div>
  </div>
{% endif %}
{% if blocks_to_render > 1 %}
  {% render 'vite-tag' with 'announcementbar.js' %}
{% endif %}
{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "select",
      "label": "Background Type",
      "id": "background_type",
      "options": [
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "color",
          "label": "Color"
        }
      ],
      "default": "color"
    },
    {
      "type": "image_picker",
      "label": "Choose Background Image",
      "id": "bg_image"
    },

    {
      "type": "color",
      "label": "Text Color",
      "id": "text_color",
      "default": "#000000"
    },
    {
      "type": "checkbox",
      "label": "Display Arrows",
      "id": "arrows"
    },
    {
      "type": "checkbox",
      "label": "Enable autoplay",
      "id": "autoplay"
    },
    {
      "type": "number",
      "label": "Autoplay time in seconds",
      "id": "autoplay_time",
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "richtext",
          "label": "Announcement Bar Text",
          "id": "announcement_text"
        },
        {
          "type": "text",
          "label": "Announcement Bar Link",
          "id": "announcement_link"
        },
        {
          "type": "select",
          "label": "Link Behavior",
          "id": "behavior",
          "default": "redirect",
          "options": [
            {
              "value": "redirect",
              "label": "Redirection"
            },
            {
              "value": "copy",
              "label": "Copy Code"
            }
          ]
        },
        {
          "type": "checkbox",
          "label": "Display copy icon",
          "id": "copy_icon",
          "info": "If behavior is selected to be Copy Code"
        },
        {
          "type": "text",
          "label": "Copy text content",
          "id": "copy_text_content",
          "info": "If Bhevaior set to Copy code then the copied code will be needed to enter here"
        }
      ]
    }
  ]
}
{% endschema %}

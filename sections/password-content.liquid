        <span class="mb-hidden sm:mb-inline-flex mb-items-center mb-gap-2 mb-rounded-full mb-border mb-border-black/10 mb-bg-white/60 mb-backdrop-blur mb-px-3 mb-py-1 mb-text-xs">
          <span class="mb-inline-block mb-h-2 mb-w-2 mb-rounded-full mb-bg-[#FF60A6] mb-animate-pulse"></span>
          <span>{{ section.settings.badge_text }}</span>
        </span>
      </div>

      {% if section.settings.social_instagram != blank
        or section.settings.social_youtube != blank
        or section.settings.social_facebook != blank
      %}

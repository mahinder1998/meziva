        <div class="mb-inline-flex mb-items-center mb-gap-2 mb-rounded-full mb-border mb-border-black/10 mb-bg-white/70 mb-backdrop-blur mb-px-4 mb-py-2 mb-text-xs sm:mb-text-sm">
          <span class="mb-font-semibold mb-text-[#724430]">NEW</span>
          <span class="mb-text-black/70">{{ section.settings.ribbon_text }}</span>
        </div>

        <h1 class="mb-text-4xl sm:mb-text-5xl mb-leading-tight mb-font-semibold mb-tracking-tight mb-font-heading">
          {{ section.settings.heading }}
          <span class="mb-text-[#FF60A6]">{{ section.settings.heading_highlight }}</span>
        </h1>

        <p class="mb-text-base sm:mb-text-lg mb-text-black/70 mb-max-w-xl mb-font-body">
          {{ section.settings.subheading }}
        </p>

        <!-- Chips -->
        <div class="mb-flex mb-flex-wrap mb-gap-2">
          {% for block in section.blocks %}
            {% if block.type == 'chip' %}
              <span class="mb-rounded-full mb-border mb-border-black/10 mb-bg-white/70 mb-backdrop-blur mb-px-4 mb-py-2 mb-text-sm mb-text-black/70 mb-font-body">
                {{ block.settings.text }}
              </span>
            {% endif %}
          {% endfor %}
        </div>

        <!-- Product image card (replaces old promise card) -->

{% style %}
.border-top{
    border-top: 1px solid rgba(1,197,227,0.2);
}
  /* Marker hatana */
  #{{ section.id }}-faq details summary::-webkit-details-marker {
    display: none;
  }

  #{{ section.id }}faq{
  padding-top: {{section.settings.mobile_padding}}px;
  padding-bottom: {{section.settings.mobile_padding}}px;
}


  /* Plus icon */
  #{{ section.id }}-faq [data-faq-icon-plus] {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
  }

  #{{ section.id }}-faq [data-faq-icon-plus]::before,
  #{{ section.id }}-faq [data-faq-icon-plus]::after {
    content: "";
    position: absolute;
    background: #fff;
    border-radius: 9999px;
  }

  /* horizontal line */
  #{{ section.id }}-faq [data-faq-icon-plus]::before {
    width: 12px;
    height: 2px;
  }

  /* vertical line (hide when open => minus sign) */
  #{{ section.id }}-faq [data-faq-icon-plus]::after {
    width: 2px;
    height: 12px;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }

  #{{ section.id }}-faq details[open] [data-faq-icon-plus]::after {
    transform: scaleY(0);
    opacity: 0;
  }

  @media(min-width:1200px){
    #{{ section.id }}faq{
   padding-top: {{section.settings.desktop_padding}}px;
    padding-bottom: {{section.settings.desktop_padding}}px;
}
}
{% endstyle %}

<section
  id="{{ section.id }}-faq"
  class="sw-w-full sw-bg-[#05080D] sw-text-white sw-py-10 xl:sw-py-16"
   style="background-color: {{section.settings.section_bg}}; color:{{section.settings.section_text_color}}"
>
  <div class="sw-max-w-[610px] sw-mx-auto sw-px-4 sw-relative sw-z-10">
    {%- if section.settings.heading != blank -%}
      <h2
        class="sw-text-center sw-text-[20px] sw-leading-[28px] sw-font-semibold xl:sw-text-[28px] xl:sw-leading-[34px] sw-text-[#01C5E3] sw-mb-6 xl:sw-mb-8"
      >
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    <div class="sw-border-y sw-border-[#01C5E3]/40">
      {%- for block in section.blocks -%}
        {%- if block.type == 'faq' -%}
          <details
            class=""
            {{ block.shopify_attributes }}
            {% if section.settings.open_first and forloop.first %}open{% endif %}
          >
            <summary
              class=" border-top sw-flex sw-items-center sw-justify-between sw-py-4 xl:sw-py-5 sw-gap-4 sw-cursor-pointer 
                
              "
            >
              <span class="sw-text-[16px] xl:sw-text-[20px] sw-font-normal sw-text-[#ffffff] sw-text-left">
                {{ block.settings.question }}
              </span>

              <span data-faq-icon-plus></span>
            </summary>

            <div class="sw-pb-4 sw-text-sm xl:sw-text-[16px] xl:sw-pb-5 sw-text-[#C8C8C8]">
              {{ block.settings.answer }}
            </div>
          </details>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Why traders choose",
  "tag": "section",
  "class": "section-why-traders-choose",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_header_left",
      "label": "Enable Header Left Image",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_header_right",
      "label": "Enable Header Right Image",
      "default": false
    },
    {
      "type": "color",
      "label": "section background color",
      "id": "section_bg",
      "default": "#1E1E1E"
    },
    {
      "type": "color",
      "label": "section text color",
      "id": "section_text_color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "mobile_padding",
      "label": "Mobile Padding Y axis",
      "min": 10,
      "max": 60,
      "step": 2,
      "default": 56
    },
    {
      "type": "range",
      "id": "desktop_padding",
      "label": "Desktop Padding Y axis",
      "min": 0,
      "max": 90,
      "step": 1,
      "default": 88
    },
    {
      "type": "html",
      "label": "Section title",
      "id": "section_title",
      "default": "TradeEdge <span> Pro</span> Features"
    },
    {
      "type": "color",
      "label": "Section Title Color",
      "id": "section_title_color",
      "default": "#000000"
    },
     {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "html",
          "id": "icon",
          "label": "Icon (emoji or short text)",
          "default": "üåç"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Universal Strategy"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<P>Works on US stocks, Indian equity, crypto, forex, commodities - any market</P>"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Why traders choose",
      "category": "Custom",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}

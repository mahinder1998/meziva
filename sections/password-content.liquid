              <div class="mb-text-xs mb-text-black/60 mb-text-center mb-mb-2 mb-font-body">
                {{ section.settings.countdown_label }}
              </div>
              <div id="swCountdown" class="mb-grid mb-grid-cols-4 mb-gap-2 mb-text-center">
                <div class="mb-rounded-2xl mb-bg-white mb-border mb-border-black/10 mb-py-3">
                  <div class="mb-text-2xl mb-font-semibold mb-font-heading" data-d>00</div>
                  <div class="mb-text-[11px] mb-text-black/60 mb-font-body">Days</div>
                </div>
                <div class="mb-rounded-2xl mb-bg-white mb-border mb-border-black/10 mb-py-3">
                  <div class="mb-text-2xl mb-font-semibold mb-font-heading" data-h>00</div>
                  <div class="mb-text-[11px] mb-text-black/60 mb-font-body">Hours</div>
                </div>
                <div class="mb-rounded-2xl mb-bg-white mb-border mb-border-black/10 mb-py-3">
                  <div class="mb-text-2xl mb-font-semibold mb-font-heading" data-m>00</div>
                  <div class="mb-text-[11px] mb-text-black/60 mb-font-body">Min</div>
                </div>
                <div class="mb-rounded-2xl mb-bg-white mb-border mb-border-black/10 mb-py-3">
                  <div class="mb-text-2xl mb-font-semibold mb-font-heading" data-s>00</div>
                  <div class="mb-text-[11px] mb-text-black/60 mb-font-body">Sec</div>
                </div>
              </div>
            </div>
          {% endif %}

          <!-- Password form -->
          {% form 'storefront_password' %}
            {% if form.errors %}
              <div class="mb-rounded-2xl mb-border mb-border-red-500/30 mb-bg-red-500/10 mb-p-3 mb-text-sm mb-text-red-700 mb-font-body mb-mb-4">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <div class="mb-space-y-3">
              <label class="mb-text-sm mb-font-semibold mb-text-black/80 mb-font-body" for="Password">
                {{ section.settings.password_label }}
              </label>


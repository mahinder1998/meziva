{%- comment -%}
  SECTION: sections/meziva-about-sugar.liquid
  Meziva • About Us (Sugar style)
  - Single collage image (you design grid inside the image)
  - Short meaningful text
  - Trust icons row (icons from schema)
  - Tailwind with mb- prefix
{%- endcomment -%}

<section
  id="meziva-about-sugar-{{ section.id }}"
  class="mb-w-full"
  style="
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  "
>
  <div class="mb-max-w-[1100px] mb-mx-auto mb-px-4 md:mb-px-6">
    {%- comment -%} Heading {%- endcomment -%}
    <div class="mb-text-center">
      <p
        class="mb-uppercase mb-tracking-[0.28em] mb-text-[12px] mb-opacity-70"
        style="color: {{ section.settings.kicker_color }};"
      >
        {{ section.settings.kicker }}
      </p>

      <h1
        class="mb-mt-3 mb-text-[28px] md:mb-text-[40px] mb-font-semibold mb-leading-[1.1]"
        style="color: {{ section.settings.heading_color }};"
      >
        {{ section.settings.heading }}
      </h1>
    </div>

    {%- comment -%} Single Collage Image {%- endcomment -%}
    <div class="mb-mt-8 md:mb-mt-10">
      <div
        class="mb-mx-auto mb-rounded-[22px] mb-overflow-hidden mb-bg-white mb-border mb-border-black/10"
        style="max-width: {{ section.settings.image_max_width }}px;"
      >
        {% if section.settings.hero_image != blank %}
          <img
            class="mb-w-full mb-h-auto"
            src="{{ section.settings.hero_image | image_url: width: 2400 }}"
            alt="{{ section.settings.hero_image_alt | escape }}"
            loading="lazy"
          >
        {% else %}
          <div class="mb-py-20 mb-text-center mb-opacity-70">Add your collage image here.</div>
        {% endif %}
      </div>
    </div>

    {%- comment -%} Short Copy {%- endcomment -%}
    <div class="mb-mt-8 md:mb-mt-9 mb-text-center">
      {% if section.settings.title_small != blank %}
        <p
          class="mb-font-semibold mb-text-[14px] md:mb-text-[16px]"
          style="color: {{ section.settings.heading_color }};"
        >
          {{ section.settings.title_small }}
        </p>
      {% endif %}

      <div
        class="mb-mt-3 mb-max-w-[760px] mb-mx-auto mb-space-y-3 mb-text-[14px] md:mb-text-[15px] mb-leading-[1.85]"
        style="color: {{ section.settings.body_color }};"
      >
        {% if section.settings.p1 != blank %}
          <p>{{ section.settings.p1 }}</p>
        {% endif %}
        {% if section.settings.p2 != blank %}
          <p>{{ section.settings.p2 }}</p>
        {% endif %}
      </div>
    </div>

    {%- comment -%} Trust Tagline + Trust Icons Row (icons from schema) {%- endcomment -%}
    {% if section.settings.show_trust_row %}
      <div class="mb-mt-12 md:mb-mt-16">
        {% if section.settings.highlight_line != blank %}
          <p
            class="mb-text-center mb-text-[14px] md:mb-text-[15px] mb-font-semibold"
            style="color: {{ section.settings.heading_color }};"
          >
            {{ section.settings.highlight_line }}
          </p>
        {% endif %}

        <div class="mb-mt-10 md:mb-mt-12">
          <div class="mb-max-w-[980px] mb-mx-auto mb-grid sm:mb-grid-cols-3 mb-gap-10 md:mb-gap-12">
            {% for i in (1..3) %}
              {% assign t = 'trust_' | append: i | append: '_title' %}
              {% assign d = 'trust_' | append: i | append: '_desc' %}
              {%- assign icon_key = 'trust_' | append: i | append: '_icon' -%}

              <div class="mb-text-center">
                <div class="mb-mx-auto mb-h-12 mb-w-12 mb-rounded-full  mb-grid mb-place-items-center mb-bg-white">
                  {% if section.settings[icon_key] != blank %}
                    <img
                      src="{{ section.settings[icon_key] | image_url: width: 80 }}"
                      alt="{{ section.settings[t] | escape }}"
                      loading="lazy"
                      class="mb-h-12 mb-w-12 mb-object-contain" 
                    >
                  {% else %}
                    <span class="mb-text-[16px]" style="color: {{ section.settings.heading_color }};">✓</span>
                  {% endif %} 
                </div>

                <div
                  class="mb-mt-4 mb-text-[14px lg:mb-text-[16px] mb-font-semibold mb-uppercase"
                  style="color: {{ section.settings.heading_color }};"
                >
                  {{ section.settings[t] }}
                </div>

                <div
                  class="mb-mt-1 mb-text-[13px] md:mb-text-[13px] mb-opacity-80"
                  style="color: {{ section.settings.body_color }};"
                >
                  {{ section.settings[d] }}
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    {% endif %}
  </div>

  <style>
    @media (min-width: 768px) {
      #meziva-about-sugar-{{ section.id }} {
        padding-top: {{ section.settings.padding_top_desktop }}px !important;
        padding-bottom: {{ section.settings.padding_bottom_desktop }}px !important;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "Meziva About (Sugar)",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Background", "default": "#ffffff" },

    { "type": "text", "id": "kicker", "label": "Kicker", "default": "ABOUT US" },
    { "type": "color", "id": "kicker_color", "label": "Kicker color", "default": "#6B6B6B" },

    { "type": "text", "id": "heading", "label": "Heading", "default": "About Meziva" },
    { "type": "color", "id": "heading_color", "label": "Heading color", "default": "#1A1A1A" },

    { "type": "image_picker", "id": "hero_image", "label": "Main image (collage/grid image)" },
    { "type": "text", "id": "hero_image_alt", "label": "Image alt", "default": "Meziva" },
    {
      "type": "range",
      "id": "image_max_width",
      "label": "Image max width (px)",
      "min": 520,
      "max": 1100,
      "step": 20,
      "default": 720
    },

    { "type": "text", "id": "title_small", "label": "Small title (optional)", "default": "Hello, gorgeous!" },
    {
      "type": "textarea",
      "id": "p1",
      "label": "Paragraph 1",
      "default": "Meziva is made for everyday beauty — lightweight, comfortable, and easy to wear."
    },
    {
      "type": "textarea",
      "id": "p2",
      "label": "Paragraph 2",
      "default": "We keep it simple: nourishing ingredients and natural-looking results you can trust."
    },

    {
      "type": "text",
      "id": "highlight_line",
      "label": "Trust line (shown above icons)",
      "default": "Pick your everyday favorites — one swipe at a time."
    },

    { "type": "color", "id": "body_color", "label": "Body text color", "default": "#3A3A3A" },

    { "type": "checkbox", "id": "show_trust_row", "label": "Show trust row", "default": true },

    { "type": "image_picker", "id": "trust_1_icon", "label": "Trust 1 icon" },
    { "type": "text", "id": "trust_1_title", "label": "Trust 1 title", "default": "EASY RETURNS" },
    { "type": "text", "id": "trust_1_desc", "label": "Trust 1 description", "default": "Simple support, quick help" },

    { "type": "image_picker", "id": "trust_2_icon", "label": "Trust 2 icon" },
    { "type": "text", "id": "trust_2_title", "label": "Trust 2 title", "default": "CRUELTY FREE" },
    { "type": "text", "id": "trust_2_desc", "label": "Trust 2 description", "default": "Kind to animals" },

    { "type": "image_picker", "id": "trust_3_icon", "label": "Trust 3 icon" },
    { "type": "text", "id": "trust_3_title", "label": "Trust 3 title", "default": "QUALITY FIRST" },
    { "type": "text", "id": "trust_3_desc", "label": "Trust 3 description", "default": "Made with care" },

    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Padding Top (Mobile)",
      "min": 0,
      "max": 160,
      "step": 4,
      "default": 48,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Padding Bottom (Mobile)",
      "min": 0,
      "max": 160,
      "step": 4,
      "default": 56,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Padding Top (Desktop)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Padding Bottom (Desktop)",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 92,
      "unit": "px"
    }
  ],
  "presets": [{ "name": "Meziva About (Sugar)" }]
}
{% endschema %}

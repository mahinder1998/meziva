<style>
    .icon-column svg {
      width: 100%;
  }
    #{{ section.id }}-featured-collection .featured-collection-wrapper{
    padding-top: {{section.settings.mobile_padding}}px;
    padding-bottom: {{section.settings.mobile_padding}}px;
  }
  .header-bg-svg svg {
      width: 100% !important;
      height: auto !important;
  }

     .section_heading span {
      border-radius: 16px;
      background: #01c5e3;
      padding: 4px 6px;
      display: inline-flex;
      color: #233052;
      font-size: 16px;
      font-style: normal;
      font-weight: 600;
    }


    @media(min-width:1200px){
    .section_heading span{
      padding: 2px 14px;
      font-size: 24px;
      border-radius: 16px;


        }

    #{{ section.id }}-featured-collection .featured-collection-wrapper{
    padding-top: {{section.settings.desktop_padding}}px;
      padding-bottom: {{section.settings.desktop_padding}}px;
  }
  .icon-column svg {
      width: auto;
  }
  .trader-wrapper>div:nth-child(2) {
      border-top: none !important;
  }
    }
</style>

<section
  class="sw-relative"
  id="{{ section.id }}-featured-collection"
  style="background-color: {{section.settings.section_bg}}; color:{{section.settings.section_text_color}}
  
  
  
  "
>
  <div class="xl:sw-w-[1152px] xl:sw-mx-auto">
    <div class="featured-collection-wrapper sw-relative sw-p-4">
      <!-- Heading -->
      {% render 'section-heading' %}

      <!-- Card -->
      <div
        class="
          sw-relative sw-z-10 sw-max-w-5xl sw-mx-auto sw-bg-slate-900/80 sw-border sw-border-teal-500/40 sw-rounded-[16px]  sw-py-6  sw-px-4  md:sw-p-10 sw-backdrop-blur

          xl:sw-max-w-[880px] xl:sw-max-auto xl:sw-p-10
        "
      >
        <div class="trader-wrapper sw-grid sw-grid-cols-1 md:sw-grid-cols-2 sw-gap-y-6 md:sw-gap-x-12 md:sw-gap-y-8">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <div
                class="sw-flex sw-items-start sw-gap-2 xl:sw-gap-4  sw-pt-4 sw-border-t sw-border-teal-500/20 first:sw-border-t-0  "
                {{ block.shopify_attributes }}
              >
                <!-- Icon circle -->
                <div class=" icon-column sw-flex sw-h-5 sw-w-5 sw-flex-none sw-items-center sw-justify-center  sw-text-teal-200">
                  {% if section.settings.icon != blank %}
                    <span class="sw-leading-none"> üåç </span>
                  {% else %}
                    <span class="sw-w-5 sw-h-5 xl:sw-w-8 xl:sw-h-8 xl:sw-flex">
                      {{ block.settings.icon }}
                    </span>
                  {% endif %}
                </div>
                <!-- Text -->
                <div>
                  <h3 class="sw-font-heading sw-text-base xl:sw-text-[24px] sw-font-semibold sw-text-[#FFF]">
                    {{ block.settings.title }}
                  </h3>
                  <div class="sw-font-body sw-mt-2 xl:sw-mt-3 sw-leading-normal  sw-text-xs xl:sw-text-[16px] sw-font-normal sw-leading-relaxed sw-text-[#FFF]">
                    {{ block.settings.description }}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

